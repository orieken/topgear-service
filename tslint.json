{
  "defaultSeverity": "error",
  "extends": [
    "tslint-clean-code"
  ],
  "rules": {
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "no-forward-ref": false,
    "max-line-length": [
      true,
      140
    ],
    "no-inferrable-types": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "eofline": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-arg": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-bitwise": true,
    "no-shadowed-variable": true,
    "no-unused-expression": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "curly": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "no-console": [
      true,
      "debug",
      "error",
      "info",
      "log",
      "time",
      "timeEnd",
      "trace",
      "warn"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "method": "never",
        "constructor": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-construct": true,
    "no-duplicate-imports": true,
    "no-empty": true,
    "variable-name": false,

    "cyclomatic-complexity": [true, 10],

    //tslint-clean-code
    "newspaper-order": true,
    "id-length": [true, 3, ["it"]],
    //    "try-catch-first":
    //    "max-func-args":
    //    "min-class-cohesion":
    //    "newspaper-order":
    //    "no-flag-args":
    //    "no-for-each-push":
    //    "no-feature-envy":
    //    "no-map-without-usage":
    //    "no-complex-conditionals":
    //    "prefer-dry-conditionals":
    "no-commented-out-code": true
  }
}